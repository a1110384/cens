{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Wasm (Audio)",
            "type": "shell",
            "command": "emcc",
            "args": [
                "hello.c",
                "-o", "hello.js",
                "-s", "USE_SDL=2",
                "-s", "EXPORTED_RUNTIME_METHODS=['ccall']",
                "-s", "NO_EXIT_RUNTIME=1",
                "-g" 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}